@page "/materiais/{Category}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using Shared.DTOs
@attribute [Authorize(Roles = "Master")]
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS

<h3>Materiais - @Category</h3>

<button class="btn btn-primary mb-3" @onclick="AddNew">+ Adicionar Material</button>

@if (materials == null)
{
    <p>Carregando...</p>
}
else if (!materials.Any())
{
    <p>Nenhum material encontrado nesta categoria.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th class="text-center">Quantidade</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in materials)
            {
                <tr>
                    <td>@m.Name</td>
                    <td class="text-center">@m.Quantity</td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => AddStock(m)">Adicionar</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(m.Id)">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter] public string Category { get; set; } = string.Empty;
    private List<MaterialDto>? materials;

    protected override async Task OnInitializedAsync()
    {
        await LoadMaterials();
    }

    void AddNew()
    {
        Nav.NavigateTo($"/materiais/{Category}/add");
    }

    async Task Delete(Guid id)
    {
        await Http.DeleteAsync($"materials/{id}");
        await LoadMaterials();
    }

    async Task AddStock(MaterialDto material)
    {
        var input = await JS.InvokeAsync<string>("prompt", $"Adicionar quantidade para {material.Name}", "1");
        if (string.IsNullOrWhiteSpace(input)) return;
        if (!int.TryParse(input, out var amount) || amount <= 0) return;

        await Http.PostAsJsonAsync($"materials/{material.Id}/add-stock", new { quantity = amount });
        await LoadMaterials();
    }

    async Task LoadMaterials()
    {
        materials = await Http.GetFromJsonAsync<List<MaterialDto>>($"materials/by-category/{Category}");
    }
}
