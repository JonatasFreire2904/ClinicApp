@page "/materiais/{Category}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop
@using Shared.DTOs
@attribute [Authorize(Roles = "Master, User")]
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS

<h3>Materiais - @Category</h3>

<button class="btn btn-primary mb-3" @onclick="AddNew">+ Add material</button>

@if (materials == null)
{
    <p>Loading...</p>
}
else if (!materials.Any())
{
    <p>No items found in this category.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th class="text-center">Quantity</th>
                <th class="text-center">Cost (R$)</th>
                <th class="text-center">Total (R$)</th>
                <th class="text-center">Added On (Qt)</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in materials)
            {
                <tr>
                    <td>@m.Name</td>
                    <td class="text-center">@m.Quantity</td>
                    <td class="text-center">@m.Cost.ToString("F2")</td>
                    <td class="text-center">@m.Cost.ToString("F2")</td>
                    <td class="text-center">@m.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm") (@m.LastAddedQuantity)</td>
                    <td class="text-end">
                                <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => AddStock(m)">Add</button>
                        <AuthorizeView Roles="Master">
                            <Authorized>
                                <button class="btn btn-sm btn-danger" @onclick="() => Delete(m.Id)">Delete</button>
                            </Authorized>
                        </AuthorizeView>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter] public string Category { get; set; } = string.Empty;
    private List<MaterialDto>? materials;

    protected override async Task OnInitializedAsync()
    {
        await LoadMaterials();
    }

    void AddNew()
    {
        Nav.NavigateTo($"/materiais/{Category}/add");
    }

    async Task Delete(Guid id)
    {
        await Http.DeleteAsync($"materials/{id}");
        await LoadMaterials();
    }

    async Task AddStock(MaterialDto material)
    {
        var input = await JS.InvokeAsync<string>("prompt", $"Adicionar quantidade para {material.Name}", "1");
        if (string.IsNullOrWhiteSpace(input)) return;
        if (!int.TryParse(input, out var amount) || amount <= 0) return;

        var inputCost = await JS.InvokeAsync<string>("prompt", $"Informe o custo unitário (R$) para {material.Name}", material.Cost.ToString());
        if (string.IsNullOrWhiteSpace(inputCost)) return;
        if (!decimal.TryParse(inputCost, out var cost) || cost < 0) return;

        var inputTotal = await JS.InvokeAsync<string>("prompt", $"Informe o valor total (R$) da compra de {material.Name}", "0");
        if (string.IsNullOrWhiteSpace(inputTotal)) return;
        if (!decimal.TryParse(inputTotal, out var total) || total < 0) return;

        await Http.PostAsJsonAsync($"materials/{material.Id}/add-stock", new { quantity = amount, cost = cost, total = total });
        await LoadMaterials();
    }

    async Task LoadMaterials()
    {
        materials = await Http.GetFromJsonAsync<List<MaterialDto>>($"materials/by-category/{Category}");
    }
}
