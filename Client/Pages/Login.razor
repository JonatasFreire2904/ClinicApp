@page "/login"
@page "/"
@layout EmptyLayout
@using Shared.DTOs.Auth
@using Client.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="login-container">
    <div class="login-card">
        <h3>🔐 Inventory Management System </h3>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert-modern alert-danger-modern">
                <span class="alert-icon">⚠️</span>
                @errorMessage
            </div>
        }

        <EditForm Model="@loginRequest" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label class="label-modern">User</label>
                <InputText @bind-Value="loginRequest.UserName" class="input-modern" />
                <ValidationMessage For="@(() => loginRequest.UserName)" />
            </div>

            <div class="mb-3" style="position: relative;">
                <label class="label-modern">Password</label>
                <InputText @bind-Value="loginRequest.Password" type="@passwordInputType" class="input-modern" />

                @* --- Ícone do olho para mostrar/esconder a senha --- *@
                <span @onclick="TogglePasswordVisibility" style="position: absolute; right: 10px; top: 40px; cursor: pointer;">
                    @(showPassword ? "👁️" : "🙈")
                </span>

                <ValidationMessage For="@(() => loginRequest.Password)" />
            </div>

            <button type="submit" class="btn-modern btn-primary-modern w-100" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>🔄 Loading...</span>
                }
                else
                {
                    <span>🔐 Login</span>
                }
            </button>
        </EditForm>
    </div>
</div>

@code {
    private LoginRequest loginRequest = new();
    private string? errorMessage;
    private bool isLoading = false;

    // --- Novas variáveis para controlar a visibilidade da senha ---
    private bool showPassword = false;
    private string passwordInputType = "password";

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
        passwordInputType = showPassword ? "text" : "password";
    }
    // -----------------------------------------------------------

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var token = await AuthService.Login(loginRequest);

            if (token != null)
            {
                await Task.Delay(100);

                var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
                var user = authState.User;

                Navigation.NavigateTo("/home");
            }
            else
            {
                errorMessage = "Login failed. Please check your credentials.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Login error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
