@if (IsVisible)
{
    <div class="modal-overlay" @onclick="HandleCancel">
        <div class="modern-modal" @onclick:stopPropagation="true">
            <div class="modal-header-modern">
                <h5 class="modal-title-modern">@Title</h5>
                <button type="button" class="modal-close-btn" @onclick="HandleCancel" aria-label="Close">
                    ‚úï
                </button>
            </div>
            
            <div class="modal-body-modern">
                <div class="material-name-display">
                    <span class="material-icon">üì¶</span>
                    <strong>@MaterialName</strong>
                </div>
                
                @if (MaxQuantity.HasValue)
                {
                    <p class="text-muted-modern small">
                        Maximum available: <strong>@MaxQuantity</strong> units
                    </p>
                }
                
                <div class="quantity-input-group">
                    <button type="button" 
                            class="qty-btn qty-btn-minus" 
                            @onclick="Decrement"
                            disabled="@(quantity <= 1)">
                        ‚àí
                    </button>
                    
                    <input type="number" 
                           class="qty-input" 
                           @bind="quantity" 
                           @bind:event="oninput"
                           @onkeydown="HandleKeyPress"
                           min="1"
                           max="@MaxQuantity"
                           placeholder="Quantity" 
                           autofocus />
                    
                    <button type="button" 
                            class="qty-btn qty-btn-plus" 
                            @onclick="Increment"
                            disabled="@(MaxQuantity.HasValue && quantity >= MaxQuantity.Value)">
                        +
                    </button>
                </div>
                
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="modal-error-message">
                        ‚ö†Ô∏è @errorMessage
                    </div>
                }
            </div>
            
            <div class="modal-footer-modern">
                <button type="button" class="btn-modal btn-modal-cancel" @onclick="HandleCancel">
                    Cancel
                </button>
                <button type="button" 
                        class="btn-modal btn-modal-confirm" 
                        @onclick="HandleConfirm"
                        disabled="@(!IsValidQuantity())">
                    Confirm
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Title { get; set; } = "Enter Quantity";
    [Parameter] public string MaterialName { get; set; } = "";
    [Parameter] public int? MaxQuantity { get; set; }
    [Parameter] public EventCallback<int> OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    
    private int quantity = 1;
    private string errorMessage = "";
    
    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            // Reset state when modal becomes visible
            quantity = 1;
            errorMessage = "";
        }
    }
    
    private void Increment()
    {
        if (!MaxQuantity.HasValue || quantity < MaxQuantity.Value)
        {
            quantity++;
            ValidateQuantity();
        }
    }
    
    private void Decrement()
    {
        if (quantity > 1)
        {
            quantity--;
            ValidateQuantity();
        }
    }
    
    private bool IsValidQuantity()
    {
        if (quantity <= 0)
            return false;
            
        if (MaxQuantity.HasValue && quantity > MaxQuantity.Value)
            return false;
            
        return true;
    }
    
    private void ValidateQuantity()
    {
        errorMessage = "";
        
        if (quantity <= 0)
        {
            errorMessage = "Quantity must be greater than 0";
        }
        else if (MaxQuantity.HasValue && quantity > MaxQuantity.Value)
        {
            errorMessage = $"Quantity cannot exceed {MaxQuantity.Value}";
        }
    }
    
    private async Task HandleConfirm()
    {
        ValidateQuantity();
        
        if (IsValidQuantity())
        {
            await OnConfirm.InvokeAsync(quantity);
        }
    }
    
    private async Task HandleCancel()
    {
        await OnCancel.InvokeAsync();
    }
    
    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && IsValidQuantity())
        {
            await HandleConfirm();
        }
        else if (e.Key == "Escape")
        {
            await HandleCancel();
        }
    }
}

<style>
